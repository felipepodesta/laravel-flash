# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = LF
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
insert_final_newline = false

[*.vue]
indent_size = 4
indent_style = tab

[{.env,.env.example,.editorconfig,.gitignore,.travis.yml,*.json,*.ini}]
indent_size = 2
indent_style = space
insert_final_newline = false

[{composer.json,.php_cs,*.php,*.js,*.css,*.scss,*.sass,*.coffee}]
indent_size = 4
indent_style = space

[{*.htm,*.html,*.blade.php}]
indent_size = 4
indent_style = tab
insert_final_newline = false